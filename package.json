{
  "name": "awful-code-review",
  "version": "1.0.0",
  "description": "A GitHub Action that reviews your code like the worst coworker you ever had",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "demo": "ts-node src/demo.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/awful-code-review"
  },
  "keywords": [
    "github-action",
    "code-review",
    "chaos",
    "humor",
    "developer-tools"
  ],
  "author": "Chaos Engineering Department",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/src/__tests__/**/*.test.ts"],
    "collectCoverageFrom": ["src/**/*.ts", "!src/__tests__/**", "!src/index.ts", "!src/demo.ts"]
  }
}
